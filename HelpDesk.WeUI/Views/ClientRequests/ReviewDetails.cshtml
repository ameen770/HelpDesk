@model HelpDesk.WebUI.Models.ClientRequest

@{
    ViewData["Title"] = "Leave Request Details";
    string className;
    string headingText;
    if (Model.RStatus == HelpDesk.WebUI.Enum.RequestStatus.Waiting)
    {
        headingText = "Pending Approval";
        className = "warning";
    }
    else if (Model.RStatus == HelpDesk.WebUI.Enum.RequestStatus.Accepted)
    {
        headingText = "Approved";
        className = "success";
    }
    else
    {
        headingText = "Rejected";
        className = "danger";
    }
}

<h1>Leave Request Details</h1>

<div class="alert alert-@className" role="alert">
    <h4 class="alert-heading">@headingText</h4>
    <hr>
    <p>
        <strong>Customer Name:</strong>  @Model.ClientName
    </p>
    <hr />
    <p>
        <strong>Requested Date:</strong> @Html.DisplayFor(model => model.RequestDate)
    </p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Response)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Response)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUserId)
        </dd>
    </dl>
</div>
<div>
    <div class="row">
        @if (Model.RStatus == HelpDesk.WebUI.Enum.RequestStatus.Waiting)
        {

            <div class="col">
                <form asp-controller="ClientRequests" asp-action="ReviewEdit" class="form-inline">
                    <input name="Id" value="@Model.RequestId" type="hidden" />
                    <input name="rStatusForm" type="hidden" value="true" />
                    <button type="submit" class="btn btn-success btn-lg">Accept</button>
                </form>
            </div>
            <div class="col">
                <form asp-controller="ClientRequests" asp-action="ReviewEdit" class="form-inline">
                    <input name="Id" value="@Model.RequestId" type="hidden" />
                    <input name="rStatusForm" type="hidden" value="false" />
                    <button type="submit" class="btn btn-danger btn-lg">Reject</button>
                </form>
            </div>
        }
        <div class="col">
            <a class="btn btn-dark btn-lg" asp-action="My_Request">Back to List</a>
        </div>
    </div>
    
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}