@model HelpDesk.WebUI.Models.AppUser

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<h3 style="text-align:center">Are you sure you want to delete @Model.Name ?</h3>
<div>
    <h4>Users</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="font-size:20px; font-weight:bold">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2" style="font-size:20px; font-weight:bold">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2" style="font-size:20px; font-weight:bold">
            @Html.DisplayNameFor(model => model.PasswordHash)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PasswordHash)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
    </form>
</div>
